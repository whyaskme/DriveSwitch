<?xml version="1.0" encoding="utf-8" ?>

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:thickness="0dp"
    android:padding="30dp"
    android:textStyle="bold"
    android:textAllCaps="false"
    android:textColor="@color/colorPrimaryButtonTextDisabled"
    android:shape="rectangle">
    <size
        android:height="@dimen/activity_vertical_margin"
        android:width="@dimen/activity_horizontal_margin" />
    <stroke android:width="1dp"
        android:color="@color/colorPrimaryDarkButtonDisabled"/>
    <corners android:radius="7dp" />
    <gradient
        android:startColor="@color/colorPrimaryButtonDisabled"
        android:endColor="@color/colorPrimaryDarkButtonDisabled"
        android:type="linear"
        android:angle="270"/>
</shape>